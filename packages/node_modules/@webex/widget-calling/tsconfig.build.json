{
  "extends": "../ts-config-webex-int/react-library.json",
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "coverage",
    "plop-templates",
    "*.stories.tsx",
    "rollup.config.js",
    ".eslintrc.js"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es2019"
    ],
    "jsx": "react",
    "composite": true,
    "resolveJsonModule": true
  }
}
